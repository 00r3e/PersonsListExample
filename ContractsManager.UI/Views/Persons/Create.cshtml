@model PersonAddRequest
@{
    ViewBag.Title = "Create Person";
    ViewBag.CurrentUrl = "~/Persons/Create";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card dark-card border-0 shadow-lg rounded-4 p-4 p-md-5" style="max-width: 700px; width: 100%;">

        <!-- Breadcrumb -->
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-accent text-decoration-none fs-4 fw-semibold">
                <i class="fa-solid fa-people-group me-2"></i>Contacts
            </a>
            <div class="text-secondary mt-1">
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Persons</span>
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Create</span>
            </div>
        </div>

        <div class="mb-3">
            <a asp-controller="Persons" asp-action="Index" class="text-accent text-decoration-none link-hover">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Persons List
            </a>
        </div>

        <h3 class="text-accent text-center mb-4">Create Person</h3>

        <form asp-controller="Persons" asp-action="Create" method="post">
            <!-- Person Name -->
            <div class="mb-3">
                <label asp-for="PersonName" class="form-label text-light">Person Name</label>
                <input asp-for="PersonName" class="form-control dark-input rounded-pill py-2" placeholder="Enter name" />
                <span asp-validation-for="PersonName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light">Email</label>
                <input asp-for="Email" class="form-control dark-input rounded-pill py-2" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Date of Birth -->
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label text-light">Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control dark-input rounded-pill py-2" />
                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
            </div>

            <!-- Gender -->
            <div class="mb-3">
                <label asp-for="Gender" class="form-label text-light d-block">Gender</label>
                <div class="d-flex gap-3 flex-wrap">
                    @{
                        string[] genderOptions = (string[])Enum.GetNames(typeof(GenderOptions));
                    }
                    @foreach (string gender in genderOptions)
                    {
                        <div class="form-check">
                            <input type="radio" asp-for="Gender" value="@gender" id="@gender" class="form-check-input" />
                            <label for="@gender" class="form-check-label text-light">@gender</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label asp-for="CountryID" class="form-label text-light">Country</label>
                <select asp-for="CountryID" class="form-select dark-input rounded-pill py-2" asp-items="@ViewBag.Countries">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="CountryID" class="text-danger small"></span>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <label asp-for="Address" class="form-label text-light">Address</label>
                <textarea asp-for="Address" class="form-control dark-input rounded-4 py-2" rows="3" placeholder="Enter address"></textarea>
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <!-- Receive Newsletters -->
            <div class="mb-4 form-check">
                <input asp-for="ReceiveNewsLetters" type="checkbox" class="form-check-input" id="ReceiveNewsLetters" />
                <label asp-for="ReceiveNewsLetters" class="form-check-label text-light">Receive News Letters</label>
                <span asp-validation-for="ReceiveNewsLetters" class="text-danger small"></span>
            </div>

            <!-- Create Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-accent rounded-pill py-2 fw-semibold">
                    <i class="fa-solid fa-user-plus me-2"></i> Create
                </button>
            </div>

            <div asp-validation-summary="All" class="text-danger mt-3"></div>

            @if (ViewBag.Errors != null)
            {
                <div class="text-danger mt-2">
                    <ul>
                        @foreach (string errorMessage in ViewBag.Errors)
                        {
                            <li>@errorMessage</li>
                        }
                    </ul>
                </div>
            }
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
