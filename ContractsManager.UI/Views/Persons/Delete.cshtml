@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
    ViewBag.CurrentUrl = "~/Persons/Delete";
}

@* <div class="container d-flex justify-content-center align-items-center min-vh-100"> *@
<div class="delete container d-flex justify-content-center align-items-center min-vh-75 mt-4">
    <div class="card dark-card border-0 shadow-lg rounded-4 p-4 p-md-5" style="max-width: 700px; width: 100%;">
        <!-- Breadcrumb -->
        <div class="mb-3">
            <a asp-controller="Persons" asp-action="Index" class="text-accent text-decoration-none link-hover">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Persons List
            </a>
        </div>
        <div class="text-center mb-4 ">
            <a asp-controller="Home" asp-action="Index" class="text-accent text-decoration-none fs-4 fw-semibold">
                <i class="fa-solid fa-people-group me-2"></i>Contacts
            </a>
            <div class="text-secondary mt-1">
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Persons</span>
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Delete</span>
            </div>
        </div>

        <h3 class="text-accent text-center mb-3">Delete Person</h3>
        <p class="text-secondary text-center mb-4">Are you sure you want to delete this person?</p>

        <form asp-controller="Persons" asp-action="Delete" method="post">
            <input type="hidden" asp-for="PersonID" />

            <!-- Person Name -->
            <div class="mb-3">
                <label asp-for="PersonName" class="form-label text-light">Person Name</label>
                <input asp-for="PersonName" class="form-control dark-input rounded-pill py-2" disabled />
                <span asp-validation-for="PersonName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light">Email</label>
                <input asp-for="Email" class="form-control dark-input rounded-pill py-2" disabled />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Optional additional readonly fields (if you want more) -->
            @* Example:
            <div class="mb-3">
                <label class="form-label text-light">Country</label>
                <input value="@Model.Country" class="form-control dark-input rounded-pill py-2" disabled />
            </div>
            *@

            <div asp-validation-summary="All" class="text-danger mt-3"></div>

            @if (ViewBag.Errors != null)
            {
                <div class="text-danger mt-2">
                    <ul>
                        @foreach (string errorMessage in ViewBag.Errors)
                        {
                            <li>@errorMessage</li>
                        }
                    </ul>
                </div>
            }

            <!-- Actions -->
            <div class="d-flex gap-2 justify-content-end mt-4">
                <a asp-controller="Persons" asp-action="Index" class="btn btn-outline-light rounded-pill px-4">
                    Cancel
                </a>

                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="fa-solid fa-trash me-2"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}