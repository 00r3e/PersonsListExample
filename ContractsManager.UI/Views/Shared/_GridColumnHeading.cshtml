@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder ==
								"ASCENDING")
{
	<th>
		<a href="~/persons/index?
						searchBy=@ViewBag.CurrentSearchBy&
						searchString=@ViewBag.CurrentSearchString&
						sortBy=@ViewBag.ColumnName&
						sortOrder=@SortOrderOptions.DESCENDING">@ViewBag.DisplayName</a>
		<i class="fa-solid fa-sort-down" />
	</th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder ==
								"DESCENDING")
{
	<th>
		<a href="~/persons/index?
						searchBy=@ViewBag.CurrentSearchBy&
						searchString=@ViewBag.CurrentSearchString&
						sortBy=@ViewBag.ColumnName&
						sortOrder=@SortOrderOptions.ASCENDING">@ViewBag.DisplayName</a>
		<i class="fa-solid fa-sort-up" />
	</th>
}
else
{
	<th>
		<a href="~/persons/index?
						searchBy=@ViewBag.CurrentSearchBy&
						searchString=@ViewBag.CurrentSearchString&
						sortBy=@ViewBag.ColumnName&
						sortOrder=@SortOrderOptions.ASCENDING">@ViewBag.DisplayName</a>
	</th>
}