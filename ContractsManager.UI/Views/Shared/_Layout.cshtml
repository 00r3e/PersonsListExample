<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewBag.Title - Contact Manager</title>

	<!-- Bootstrap 5 -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

	<!-- Custom CSS -->
	<link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body class="dark-body">

	<!-- Top Navbar -->
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3 border-bottom border-secondary">
		<div class="container">
			<a class="navbar-brand fw-semibold d-flex align-items-center text-accent" href="~/">
				<i class="fa-solid fa-people-simple me-2"></i> Contact Manager
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
				<ul class="navbar-nav align-items-center gap-3">
					@if (User.Identity.IsAuthenticated)
					{
						<li class="nav-item">
							<span class="nav-link text-light-50">
								<i class="fa-solid fa-user me-1"></i>@User.Identity?.Name
							</span>
						</li>
						<li class="nav-item">
							<a asp-action="Logout" asp-controller="Account" class="btn btn-outline-danger rounded-pill px-3">
								Logout
							</a>
						</li>
					}
					else
					{
						<li class="nav-item">
							<a class="nav-link @(ViewBag.CurrentUrl == "~/Account/Register" ? "active-link" : "")" asp-action="Register" asp-controller="Account">Register</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @(ViewBag.CurrentUrl == "~/Account/Login" ? "active-link" : "")" asp-action="Login" asp-controller="Account">Login</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>

	<!-- Subnav -->
	<div class="bg-darker border-bottom border-secondary shadow-sm">
		<div class="container py-2 d-flex gap-3">
			<a asp-controller="Persons" asp-action="Index" class="subnav-link @(ViewBag.CurrentUrl == "~/Persons/Index" ? "subnav-active" : "")">
				<i class="fa-solid fa-users me-1"></i>Persons
			</a>
			<a asp-controller="Countries" asp-action="UploadFromExcel" class="subnav-link @(ViewBag.CurrentUrl == "~/Countries/UploadFromExcel" ? "subnav-active" : "")">
				<i class="fa-solid fa-file-arrow-up me-1"></i>Upload Countries
			</a>
		</div>
	</div>

	<!-- Main Content -->
	<main class="container my-5">
		@RenderBody()
	</main>

	@RenderSection("scripts", required: false)
</body>
</html>
