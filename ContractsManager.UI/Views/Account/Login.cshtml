@model LoginDTO
@{
    ViewBag.Title = "Login";
    ViewBag.CurrentUrl = "~/Account/Login";
}

@* <div class="container d-flex justify-content-center align-items-center min-vh-100"> *@
<div class="container d-flex justify-content-center align-items-center min-vh-75 mt-4">
    <div class="card dark-card border-0 shadow-lg rounded-4 p-4 p-md-5" style="max-width: 480px; width: 100%;">
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-accent text-decoration-none fs-4 fw-semibold">
                <i class="fa-solid fa-people-group me-2"></i>Contacts
            </a>
            <div class="text-secondary mt-1">
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Login</span>
            </div>
        </div>

        <div class="text-center mb-3">
            <span class="text-light">Not yet registered?</span>
            <a asp-action="Register" asp-controller="Account" class="text-accent text-decoration-none ms-1 link-hover">
                Register
            </a>
        </div>

        <h3 class="text-accent text-center mb-4">Login to your account</h3>

        <form asp-controller="Account"
              asp-action="Login"
              asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]"
              method="post"
              class="needs-validation"
              novalidate>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light fw-medium">Email</label>
                <input asp-for="Email" class="form-control dark-input rounded-pill py-2" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label text-light fw-medium">Password</label>
                <input asp-for="Password" class="form-control dark-input rounded-pill py-2" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Login Button -->
            <div class="d-grid mb-3">
                <button class="btn btn-accent rounded-pill py-2 fw-semibold" type="submit">
                    <i class="fa-solid fa-right-to-bracket me-1"></i> Login
                </button>
            </div>

            <div asp-validation-summary="All" class="text-danger small"></div>

            @if (ViewBag.Errors != null)
            {
                <div class="text-danger mt-3">
                    <ul class="mb-0 ps-3">
                        @foreach (string error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </form>
    </div>
</div>

