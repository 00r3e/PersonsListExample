@model IEnumerable<PersonResponse>
@{
    Layout = null;
    ViewBag.CurrentUrl = "~/Persons/PersonsPDF";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Persons Report</title>

    <!-- Bootstrap 5 Dark Theme -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #121212;
            color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px;
        }

        h1 {
            color: #00c896;
            text-align: center;
            margin-bottom: 40px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        table {
            background-color: #1e1e1e;
            border-radius: 10px;
            overflow: hidden;
        }

        thead {
            background-color: #2b2b2b;
            color: #00c896;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        th, td {
            vertical-align: middle !important;
        }

        tbody tr:nth-child(even) {
            background-color: #242424;
        }

        tbody tr:hover {
            background-color: #333333;
        }

        .table > :not(caption) > * > * {
            border-color: #3a3a3a;
        }
    </style>
</head>
<body>
    <h1><i class="fa-solid fa-users me-2"></i>Persons Report</h1>

    <table class="table table-dark table-striped table-hover align-middle w-100 shadow">
        <thead>
            <tr>
                <th>Person Name</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Country</th>
                <th>Address</th>
                <th>Receive News Letters</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.Email</td>
                    <td>@person.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                    <td>@person.Age</td>
                    <td>@person.Gender</td>
                    <td>@person.Country</td>
                    <td>@person.Address</td>
                    <td>@(person.ReceiveNewsLetters ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>

    <footer class="text-secondary text-center mt-5 small">
        Generated on @DateTime.Now.ToString("dd MMM yyyy HH:mm")
    </footer>

    <script src="https://kit.fontawesome.com/a2e0b6a64d.js" crossorigin="anonymous"></script>
</body>
</html>