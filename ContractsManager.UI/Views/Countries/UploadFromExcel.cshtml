@{
    ViewBag.Title = "Upload Countries from Excel";
    ViewBag.CurrentUrl = "~/Countries/UploadFromExcel";
}

@* <div class="container d-flex justify-content-center align-items-center min-vh-100"> *@
<div class="container d-flex justify-content-center align-items-center min-vh-75 mt-4">
    <div class="card dark-card border-0 shadow-lg rounded-4 p-4 p-md-5" style="max-width: 550px; width: 100%;">
        <!-- Breadcrumb -->
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-accent text-decoration-none fs-4 fw-semibold">
                <i class="fa-solid fa-people-group me-2"></i>Contacts
            </a>
            <div class="text-secondary mt-1">
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Countries</span>
                <i class="fa-solid fa-caret-right"></i>
                <span class="text-light">Upload</span>
            </div>
        </div>

        <!-- Page Title -->
        <h3 class="text-accent text-center mb-4">Upload Countries from Excel</h3>

        <!-- Upload Form -->
        <form asp-action="UploadFromExcel" asp-controller="Countries" method="post" enctype="multipart/form-data">
            <!-- Excel File Input -->
            <div class="mb-4">
                <label class="form-label text-light">Choose an Excel (.xlsx) file</label>
                <input type="file" name="excelFile" accept=".xlsx" class="form-control dark-input rounded-pill py-2" />
            </div>

            <!-- Messages -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger rounded-3 py-2">@ViewBag.ErrorMessage</div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success rounded-3 py-2">@ViewBag.Message</div>
            }

            <!-- Submit Button -->
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-accent rounded-pill py-2 fw-semibold">
                    <i class="fa-solid fa-file-arrow-up me-2"></i> Upload
                </button>
            </div>
        </form>
    </div>
</div>